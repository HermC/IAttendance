<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.nju.ise.dao.UserMapper" >

    <resultMap id="User" type="edu.nju.ise.model.User">
        <result column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="last_password_reset_date" property="lastPasswordResetDate" jdbcType="VARCHAR" />
        <association property="authorities" column="id"
                     select="edu.nju.ise.dao.AuthorityMapper.findById" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id"
            parameterType="edu.nju.ise.model.User">
        INSERT INTO `user`(`username`, `password`, `last_password_reset_date`)
        VALUES (#{username}, #{password}, #{lastPasswordResetDate})
    </insert>

    <select id="findByUsername" resultMap="User">
        SELECT * FROM `user` WHERE `username` = #{username}
    </select>

</mapper>