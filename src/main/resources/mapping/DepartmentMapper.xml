<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.nju.ise.dao.DepartmentMapper">
    <insert id="insert">
        INSERT INTO `department` (`name`)
        VALUES (#{name})
    </insert>
    <select id="findDepartmentListByPage" resultType="edu.nju.ise.model.Department">
        SELECT * FROM `department`
        WHERE 1 = 1
        <if test="filters.id != null">
            AND `id` = #{filters.id}
        </if>
        <if test="filters.name != null">
            AND `name` = #{filters.name}
        </if>
    </select>
    <select id="countDepartment" resultType="java.lang.Long">
        SELECT COUNT(`id`) FROM `department`
        WHERE 1 = 1
        <if test="filters.id != null">
            AND `id` = #{filters.id}
        </if>
        <if test="filters.name != null">
            AND `name` = #{filters.name}
        </if>
    </select>
    <select id="findDepartmentByName" resultType="edu.nju.ise.model.Department">
        SELECT * FROM `department` WHERE `name` = #{name}
    </select>
</mapper>